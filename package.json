{
  "name": "@plateforme-sifast/root-config",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "start": "webpack serve --port 9000 --host 0.0.0.0 --env env=default",
    "lint": "eslint src --ext js,ts,tsx",
    "test": "cross-env BABEL_ENV=test jest --passWithNoTests",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "build": "concurrently npm:build:*",
    "build:webpack": "webpack --mode=production --env env=default",
    "build:webpack-itg": "webpack --mode=production --env env=itg",
    "build:webpack-rec": "webpack --mode=production --env env=rec",
    "build:webpack-prod": "webpack --mode=production --env env=prod",
    "build:types": "tsc",
    "fixinstall": "rm -rfv node_modules/* package-lock.json && npm run clean && npm install",
    "clean": "npm cache clean --force",
    "webpack-help": "webpack --help"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.3",
    "concurrently": "^6.2.1",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-ts-important-stuff": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "html-webpack-plugin": "^5.3.2",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "serve": "^12.0.0",
    "ts-config-single-spa": "^3.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-config-single-spa-ts": "^4.0.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@types/systemjs": "^6.1.1",
    "single-spa": "^5.9.3",
    "@types/webpack-env": "^1.16.2",
    "single-spa-layout": "2.0.0",
    "gulp": "^3.9.1",
    "gulp-bump": "2.8.0",
    "gulp-shell": "^0.6.3",
    "gulp-util": "^3.0.8",
    "run-sequence": "^2.2.0"
  },
  "types": "dist/plateforme-sifast-root-config.d.ts"
}
